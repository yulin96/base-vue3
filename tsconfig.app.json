{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["types/**/*", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "dist"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "lib": ["ES2024", "DOM", "DOM.Iterable"],

    "allowJs": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "erasableSyntaxOnly": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
