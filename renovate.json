{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "group:monorepos", "group:allNonMajor", ":semanticCommits"],
  "lockFileMaintenance": {
    "enabled": true,
    "commitMessageAction": "更新锁文件"
  },
  "rangeStrategy": "bump",
  "dependencyDashboard": false,
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "automergeType": "pr",
  "commitMessagePrefix": "chore: ",
  "commitMessageAction": "更新依赖项",
  "commitMessageExtra": "至 {{newValue}}"
}
