{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":automergeMinor", ":automergePatch", "group:monorepos", "group:allNonMajor"],
  "lockFileMaintenance": {
    "enabled": true,
    "commitMessage": "chore: 更新锁文件"
  },
  "rangeStrategy": "bump",
  "dependencyDashboard": false,
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "automergeType": "pr",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "commitMessagePrefix": "chore: ",
  "commitMessageAction": "更新依赖项",
  "commitMessageExtra": "至 {{newValue}}"
}
