{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergeMinor",
    ":automergePatch",
    "group:monorepos",
    "group:allNonMajor",
    "group:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "commitMessage": "chore: 更新锁文件"
  },
  "rangeStrategy": "bump",
  "dependencyDashboard": false,
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "automerge": true,
  "automergeType": "pr",
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore: ",
  "commitMessageAction": "更新依赖项",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "至 {{newValue}}",
  "semanticCommitType": "chore",
  "semanticCommitScope": ""
}
