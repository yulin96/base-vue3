{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "group:monorepos", "group:allNonMajor", ":semanticCommits"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "rangeStrategy": "bump",
  "dependencyDashboard": false,
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "automergeType": "pr",
  "automerge": true
}
