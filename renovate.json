{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergeMinor",
    ":automergePatch",
    "group:monorepos",
    "group:allNonMajor",
    "group:recommended"
  ],
  "schedule": ["before 10pm every day"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "enabled": true
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "dependencyDashboard": true,
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5
}
